# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to GitHub - only commit .env.example

# ============================================
# LLM CONFIGURATION (REQUIRED)
# ============================================
# Gemini API (Primary - Get from: https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.7

# OpenAI API (Legacy/Fallback)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7

# Groq API (Optional)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_TEMPERATURE=0.7

# ============================================
# FLASK CONFIGURATION
# ============================================
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=10000
FLASK_ENV=production

# ============================================
# SECURITY (REQUIRED)
# ============================================
# Generate a strong secret key: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ACCESS_TOKEN_EXPIRES=3600

# ============================================
# DATABASE (REQUIRED)
# ============================================
# MongoDB Connection String
MONGODB_URI=your_mongodb_connection_string_here
DATABASE_NAME=pharmapilot

# ============================================
# EMAIL CONFIGURATION (REQUIRED for password reset)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password_here
EMAIL_FROM=noreply@pharmapilot.com

# ============================================
# CORS CONFIGURATION
# ============================================
ENABLE_CORS=True
# Frontend URL for CORS (your Vercel deployment)
FRONTEND_URL=https://your-frontend.vercel.app

# ============================================
# APPLICATION SETTINGS
# ============================================
LOG_LEVEL=INFO
MAX_CONTENT_LENGTH=16777216

# ============================================
# VERTEX AI (Optional - for Google Cloud)
# ============================================
VERTEX_PROJECT_ID=your_gcp_project_id
VERTEX_LOCATION=us-central1
VERTEX_MODEL=gemini-1.5-pro
VERTEX_TEMPERATURE=0.2
